{
  "name": "peritus-ai",
  "displayName": "Peritus AI",
  "description": "An AI Code Assistant",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "peritus-ai-sidebar-view",
          "title": "Peritus AI",
          "icon": "media/hubot.svg"
        }
      ]
    },
    "views": {
      "peritus-ai-sidebar-view": [
        {
          "type": "webview",
          "id": "peritus-ai-sidebar",
          "name": "Peritus AI",
          "icon": "media/hubot.svg",
          "contextualTitle": "Peritus AI"
        }
      ]
    },
    "commands": [
      {
        "command": "peritus-ai.helloWorld",
        "category": "Peritus AI",
        "title": "Hello World"
      },
      {
        "command": "peritus-ai.askQuestion",
        "category": "Peritus AI",
        "title": "Ask Question"
      },
      {
        "command": "peritus-ai.refresh",
        "category": "Peritus AI",
        "title": "Refresh"
      },
      {
        "command": "peritus-ai.addTodo",
        "category": "Peritus AI",
        "title": "Add Todo From Selection"
      },
      {
        "command": "peritus-ai.error",
        "category": "Peritus AI",
        "title": "Prompt User for Debug"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w --bundleConfigAsCjs\" \"webpack --mode development --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@tsconfig/svelte": "^3.0.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "concurrently": "^7.6.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "svelte": "^3.55.1",
    "svelte-check": "^3.1.0",
    "svelte-preprocess": "^5.0.1",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@fortawesome/free-regular-svg-icons": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/pro-regular-svg-icons": "^6.4.0",
    "@rollup/plugin-terser": "^0.4.0",
    "openai": "^3.2.1",
    "prismjs": "^1.29.0",
    "rollup": "^3.20.0",
    "rollup-plugin-svelte": "^6.1.1",
    "sse": "github:mpetazzoni/sse.js",
    "svelte-fa": "^3.0.3"
  }
}
