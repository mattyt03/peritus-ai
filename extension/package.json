{
  "name": "peritus",
  "displayName": "Peritus",
  "version": "0.0.3",
  "publisher": "Peritus",
  "description": "Smarter Coding Made Easy",
  "engines": {
    "vscode": "^1.76.0"
  },
  "bugs": {
    "url": "https://github.com/mattyt03/peritus-ai/issues",
    "email": "matthewtolea@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mattyt03/peritus-ai.git"
  },
  "homepage": "https://github.com/mattyt03/peritus-ai/",
  "icon": "media/logo.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Peritus",
      "properties": {
        "peritus.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key"
        },
        "peritus.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "enum": ["gpt-3.5-turbo", "gpt-4"],
          "description": "The language model used for requests"
        },
        "peritus.maxTokensPerRequest": {
          "type": "number",
          "default": 1000,
          "description": "The maximum number of tokens per request"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "peritus-sidebar-view",
          "title": "Peritus",
          "icon": "media/logo2.svg"
        }
      ]
    },
    "views": {
      "peritus-sidebar-view": [
        {
          "type": "webview",
          "id": "peritus-sidebar",
          "name": "Peritus",
          "icon": "media/logo2.svg",
          "contextualTitle": "Peritus"
        }
      ]
    },
    "commands": [
      {
        "command": "peritus.refresh",
        "category": "Peritus",
        "title": "Refresh"
      },
      {
        "command": "peritus.runCode",
        "category": "Peritus",
        "title": "Run Code"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w --bundleConfigAsCjs\" \"webpack --mode development --watch\"",
    "package": "rollup -c --bundleConfigAsCjs && webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@tsconfig/svelte": "^3.0.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "concurrently": "^7.6.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "svelte": "^3.55.1",
    "svelte-check": "^3.1.0",
    "svelte-preprocess": "^5.0.1",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@fortawesome/free-regular-svg-icons": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/pro-regular-svg-icons": "^6.4.0",
    "@rollup/plugin-terser": "^0.4.0",
    "canvas-confetti": "^1.6.0",
    "openai": "^3.2.1",
    "prismjs": "^1.29.0",
    "rollup": "^3.20.0",
    "rollup-plugin-svelte": "^6.1.1",
    "rollup-plugin-svg": "^2.0.0",
    "sse": "github:mpetazzoni/sse.js",
    "svelte-fa": "^3.0.3",
    "svelte-inline-svg": "^1.2.0"
  }
}
